{
  "buildCommand": "echo 'No build needed - static site'",
  "outputDirectory": ".",
  "framework": null,
  "installCommand": "echo 'No install needed'",
  "devCommand": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}

